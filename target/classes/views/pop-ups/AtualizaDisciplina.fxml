<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="369.0" prefWidth="222.0" spacing="10" style="-fx-padding: 20; -fx-background-color: wihite" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="laxstudy.controller.CadastroDisciplinaController">
    <Label alignment="CENTER" prefHeight="51.0" prefWidth="157.0" style="-fx-font-family: 'Poppins'; -fx-font-size: 24px; -fx-text-fill: #1e1d1c" text="Disciplina" textAlignment="CENTER">
      <VBox.margin>
         <Insets bottom="20.0" />
      </VBox.margin></Label>

    <TextField fx:id="campoNome" prefHeight="26.0" prefWidth="398.0" promptText="Nome" style="-fx-font-family: 'Inter'; -fx-font-size: 12px; -fx-text-fill: #545454; -fx-background-color: white; -fx-border-radius: 5; -fx-border-color: #e6e6e6" />

    <ComboBox fx:id="campoNivel" prefHeight="26.0" prefWidth="480.0" promptText="Nível" style="-fx-font-family: 'Inter'; -fx-font-size: 12px; -fx-text-fill: #545454; -fx-background-color: white; -fx-border-radius: 5; -fx-border-color: #e6e6e6" />

    <TextArea fx:id="campoDescricao" promptText="Descrição" style="-fx-font-family: 'Inter'; -fx-font-size: 12px; -fx-text-fill: #545454; -fx-background-color: white; -fx-border-radius: 5; -fx-border-color: #e6e6e6" />

    <Button alignment="CENTER" onAction="#goUpdate" prefHeight="86.0" prefWidth="182.0" style="-fx-font-family: 'Poppins'; -fx-font-size: 12px; -fx-text-fill: white; -fx-background-color: #00bf63; -fx-border-radius: 5" text="Atualizar" />
</VBox>
