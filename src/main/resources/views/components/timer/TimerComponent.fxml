<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<GridPane fx:controller="laxstudy.components.timer.TimerController"
          xmlns:fx="http://javafx.com/fxml"
          alignment="center" hgap="10" vgap="10">

    <Text fx:id="textTimeLeft" text="00:00:00" GridPane.columnSpan="3"
          style="-fx-font-size: 48;" />

    <Button fx:id="btnStart" text="Start" GridPane.rowIndex="1" />
    <Button fx:id="btnPause" text="Pause" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
    <Button fx:id="btnSet" text="Set" GridPane.rowIndex="2" GridPane.columnIndex="2"/>

    <TextField fx:id="textSet" text="00:10" GridPane.rowIndex="2"/>
</GridPane>
